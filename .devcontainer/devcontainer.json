// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
	"name": "Python 3",
	"image": "mcr.microsoft.com/devcontainers/python:3.13-bookworm",

	"secrets": {
		"TAILSCALE_CI_KEY": {
			"description": "The Tailscale API key used to authenticate test nodes.",
			"documentationUrl": "https://tailscale.com/kb/1101/api#authentication"
		}
	},

	"features": {
		"ghcr.io/devcontainers/features/docker-in-docker:2": {},
		"ghcr.io/devcontainers/features/git:1": {},
		"ghcr.io/devcontainers/features/github-cli:1": {},
		"ghcr.io/devcontainers-extra/features/pre-commit:2": {},
		"ghcr.io/devcontainers/features/common-utils:2": {
			"configureZshAsDefaultShell": true
		}
	},

	// This is necessary to make Ansible collection patching work in a GitHub Codespace environment.
	// Cannot vouch for its compatibility with other devcontainer environments.
	"workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/collections/ansible_collections/artis3n/tailscale,type=bind,consistency=cached",
	"workspaceFolder": "/workspaces/collections/ansible_collections/artis3n/tailscale",

	"remoteEnv": {
		"ANSIBLE_CONFIG": "/workspaces/collections/ansible_collections/artis3n/tailscale/ansible.cfg"
	},

	"onCreateCommand": "sudo apt update && sudo apt full-upgrade -y",
	"postCreateCommand": "pipx install uv",
	"postStartCommand": "git pull --prune && uv sync --frozen",

	// Configure tool-specific properties.
	"customizations": {
		"jetbrains": {
			"backend": "PyCharm",
			"plugins": [
				"Docker",
				"izhangzhihao.rainbow.brackets",
				"mobi.hsz.idea.gitignore",
				"name.kropp.intellij.makefile",
				"org.jetbrains.plugins.github",
				"org.jetbrains.plugins.yaml",
				"org.jetbrains.plugins.docker.gateway",
				"org.toml.lang"
			]
		}
	}
}
